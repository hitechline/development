{
  "name": "@hitechline/renovate-config",
  "version": "1.3.0",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "directory": "packages/renovate-config",
    "url": "git+https://github.com/hitechline/development.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "config",
    "renovate",
    "shareable"
  ],
  "renovate-config": {
    "default": {
      "extends": [
        "@hitechline:base",
        "@hitechline:customize",
        "@hitechline:simpleAutoMerge",
        "@hitechline:maintainLockFiles",
        "@hitechline:semanticCommitPrefix"
      ],
      "npm": {
        "packageRules": [
          {
            "enabled": false,
            "matchUpdateTypes": [
              "major"
            ],
            "matchPackageNames": [
              "@types/node"
            ]
          }
        ]
      }
    },
    "base": {
      "prCreation": "immediate",
      "rangeStrategy": "auto",
      "timezone": "America/Sao_Paulo",
      "prHourlyLimit": 0,
      "prConcurrentLimit": 5,
      "ignoreUnstable": true,
      "updateNotScheduled": true,
      "separateMajorMinor": true,
      "separateMinorPatch": false,
      "pin": {
        "commitBody": "[skip ci]"
      },
      "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
          "vulnerability"
        ]
      },
      "extends": [
        "group:monorepos",
        "group:recommended"
      ],
      "ignorePaths": [
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**",
        "**/examples/**",
        "**/__tests__/**",
        "**/test/**",
        "**/tests/**",
        "**/__fixtures__/**"
      ]
    },
    "customize": {
      "labels": [
        "renovate",
        "depedendencies"
      ]
    },
    "simpleAutoMerge": {
      "requiredStatusChecks": [],
      "pin": {
        "automerge": true
      },
      "minor": {
        "automerge": true
      },
      "patch": {
        "automerge": true
      },
      "lockFileMaintenance": {
        "automerge": true
      },
      "packageRules": [
        {
          "automerge": true,
          "matchPackagePatterns": [
            "^@types/"
          ]
        },
        {
          "automerge": true,
          "extends": [
            "packages:test"
          ]
        },
        {
          "automerge": true,
          "extends": [
            "packages:linters"
          ]
        }
      ]
    },
    "maintainLockFiles": {
      "lockFileMaintenance": {
        "enabled": true,
        "extends": [
          "schedule:weekly"
        ]
      }
    },
    "semanticCommitPrefix": {
      "packageRules": [
        {
          "semanticCommitType": "chore",
          "matchPackagePatterns": [
            "*"
          ]
        },
        {
          "semanticCommitType": "fix",
          "matchDepTypes": [
            "dependencies",
            "require"
          ]
        }
      ]
    }
  }
}

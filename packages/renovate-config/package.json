{
  "name": "@hitechline/renovate-config",
  "version": "1.1.4",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "directory": "packages/renovate-config",
    "url": "git+https://github.com/hitechline/development.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "config",
    "renovate",
    "shareable"
  ],
  "renovate-config": {
    "default": {
      "extends": [
        "@hitechline:base",
        "@hitechline:customize",
        "@hitechline:simpleAutoMerge",
        "@hitechline:maintainLockFiles",
        "@hitechline:semanticPrefixFixDepsPeerChoreOthers"
      ],
      "npm": {
        "schedule": "at any time",
        "extends": [
          "helpers:disableTypesNodeMajor"
        ],
        "packageRules": [
          {
            "groupName": "ESLint and Prettier",
            "packageNames": [
              "eslint",
              "prettier"
            ],
            "packagePatterns": [
              "eslint-config$",
              "eslint-plugin$",
              "^eslint-config-",
              "^eslint-plugin-"
            ]
          }
        ]
      }
    },
    "base": {
      "prConcurrentLimit": 5,
      "extends": [
        "group:monorepos",
        "group:recommended",
        ":pinSkipCi",
        ":prNotPending",
        ":prHourlyLimitNone",
        ":updateNotScheduled",
        ":autodetectPinVersions",
        ":separatePatchReleases",
        ":ignoreModulesAndTests",
        ":enableVulnerabilityAlerts",
        ":separateMultipleMajorReleases",
        ":timezone(America/Sao_Paulo)"
      ]
    },
    "customize": {
      "labels": [
        "renovate",
        "depedendencies"
      ]
    },
    "simpleAutoMerge": {
      "extends": [
        ":automergePatch",
        ":automergeMinor",
        ":automergeTypes",
        ":automergeTesters",
        ":automergeLinters",
        ":automergeRequireAllStatusChecks"
      ]
    },
    "maintainLockFiles": {
      "extends": [
        ":maintainLockFilesWeekly"
      ]
    },
    "semanticPrefixFixDepsPeerChoreOthers": {
      "packageRules": [
        {
          "semanticCommitType": "chore",
          "packagePatterns": [
            "*"
          ]
        },
        {
          "semanticCommitType": "fix",
          "depTypeList": [
            "dependencies",
            "peerDependencies"
          ]
        }
      ]
    }
  }
}
